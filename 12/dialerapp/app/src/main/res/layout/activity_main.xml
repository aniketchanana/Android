<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:weightSum="6"
    android:orientation="vertical">
    <LinearLayout
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:inputType="none"
            android:gravity="center"
            android:id="@+id/contact"
            android:layout_width="300dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textSize="30dp" />
        <Button
            android:id="@+id/back"
            android:layout_gravity="center"
            android:text="C"
            android:textSize="40dp"
            android:layout_width="80dp"
            android:layout_height="80dp" />
    </LinearLayout>
        <LinearLayout
            android:weightSum="3"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn1"
                android:text="1"
                android:textSize="40dp"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:background="@drawable/shapes"/>
            <Button
                android:id="@+id/btn2"
                android:text="2"
                android:textSize="40dp"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:background="@drawable/shapes"/>
            <Button
                android:id="@+id/btn3"
                android:text="3"
                android:textSize="40dp"                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:background="@drawable/shapes"/>
        </LinearLayout>
        <LinearLayout
            android:weightSum="3"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="horizontal">
            <Button
                android:id="@+id/btn4"
                android:text="4"
                android:textSize="40dp"                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:background="@drawable/shapes"/>
            <Button
                android:id="@+id/btn5"
                android:text="5"
                android:textSize="40dp"                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:background="@drawable/shapes"/>
            <Button
                android:id="@+id/btn6"
                android:text="6"
                android:textSize="40dp"                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:background="@drawable/shapes"/>
        </LinearLayout>
        <LinearLayout
        android:weightSum="3"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="horizontal">
            <Button
                android:id="@+id/btn7"
                android:text="7"
                android:textSize="40dp"                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:background="@drawable/shapes"/>
            <Button
                android:id="@+id/btn8"
                android:text="8"
                android:textSize="40dp"                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:background="@drawable/shapes"/>
            <Button
                android:text="9"
                android:id="@+id/btn9"
                android:textSize="40dp"                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:background="@drawable/shapes"/>
    </LinearLayout>

        <LinearLayout
            android:weightSum="3"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="horizontal">
            <Button
                android:id="@+id/btn10"
                android:text="*"
                android:textSize="40dp"                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:background="@drawable/shapes"/>
            <Button
                android:id="@+id/btn11"
                android:text="0"
                android:textSize="40dp"                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:background="@drawable/shapes"/>
            <Button
                android:id="@+id/btn12"
                android:text="#"
                android:textSize="40dp"                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:background="@drawable/shapes"/>
        </LinearLayout>
        <LinearLayout
            android:weightSum="3"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/btn13"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:src="@drawable/call" />
            <ImageView
                android:id="@+id/btn14"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:src="@drawable/w" />
            <ImageView
                android:id="@+id/btn15"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:src="@drawable/envelope" />


        </LinearLayout>

</LinearLayout>