<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:weightSum="6">

    <ImageView
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:src="@drawable/lco"
        />

    <LinearLayout
        android:layout_margin="20dp"
        android:layout_weight="5"
        android:weightSum="5"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="0dp">
        <LinearLayout
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="horizontal"
            android:weightSum="2">
            <Button
                android:textColor="@android:color/white"
                android:id="@+id/btn1"
                android:textSize="20dp"
                android:text="one"
                android:background="#3098da"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent" />
            <Button
                android:textColor="@android:color/white"
                android:id="@+id/btn2"
                android:textSize="20dp"
                android:text="Two"
                android:background="@android:color/holo_blue_dark"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent" />
        </LinearLayout>

        <LinearLayout
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="horizontal"
            android:weightSum="2">
            <Button
                android:textColor="@android:color/white"
                android:id="@+id/btn3"
                android:textSize="20dp"
                android:text="three"
                android:background="#e52a00"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent" />
            <Button
                android:textColor="@android:color/white"
                android:id="@+id/btn4"
                android:textSize="20dp"
                android:text="four"
                android:background="#7723"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent" />
        </LinearLayout>

        <LinearLayout

            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="horizontal"
            android:weightSum="2">
            <Button
                android:textColor="@android:color/white"
                android:id="@+id/btn5"
                android:textSize="20dp"
                android:text="five"
                android:background="@android:color/darker_gray"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent" />
            <Button
                android:textColor="@android:color/white"
                android:id="@+id/btn6"
                android:textSize="20dp"
                android:text="six"
                android:background="#239f68"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent" />
        </LinearLayout>

        <LinearLayout
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="horizontal"
            android:weightSum="2">
            <Button
                android:textColor="@android:color/white"
                android:id="@+id/btn7"
                android:textSize="20dp"
                android:text="seven"
                android:background="#3098da"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent" />
            <Button
                android:textColor="@android:color/white"
                android:id="@+id/btn8"
                android:textSize="20dp"
                android:text="eight"
                android:background="@android:color/holo_red_light"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent" />
        </LinearLayout>

        <LinearLayout
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="horizontal"
            android:weightSum="2">
            <Button
                android:textColor="@android:color/white"
                android:id="@+id/btn9"
                android:textSize="20dp"
                android:text="nine"
                android:background="@android:color/holo_blue_dark"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent" />
            <Button
                android:textColor="@android:color/white"
                android:id="@+id/btn10"
                android:textSize="20dp"
                android:text="ten"
                android:background="@android:color/holo_green_dark"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>